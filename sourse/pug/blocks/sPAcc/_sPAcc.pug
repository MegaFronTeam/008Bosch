mixin pDataItem(name,val)
	+e.pd-row.row
		+e.pd-name.col-auto=name
		+e.pd-val.col=val

mixin pAccOrders()
	+b.pa-orders
		+e.title.h4 Заказы
		+e.items.pa-orders-dd-js
			+pAccOrdersItem('', 'Не оплачен')
			+pAccOrdersItem('', 'Не оплачен')
			+pAccOrdersItem('', 'На доставке', 'true')
			+pAccOrdersItem('', 'На доставке', 'true')
			+pAccOrdersItem('active', 'Оформлен', 'true')

mixin pAccOrdersItem(activeClasses, paid, delivered)
	+e.item(class=activeClasses)
		+e.head.dd-head-js
			+e.h-main-row.row.align-items-center
				.col
					+e.h-sub-row.row.align-items-center
						+e.num-col.col-md Заказ №121212
						+e.date-col.col-md 12.03.2020
						+e.price-col.col-md 33 294 ₽
				if paid=="Не оплачен"
					+e.status-col--noPaid.col-auto Не оплачен
				else if paid=="На доставке"
					+e.status-col.col-auto На доставке
				else
					+e.status-col.col-auto Оформлен
				.col-auto
					+e.chevron
						//- +icon('chevron-down')
		+e.content.dd-content-js(class=activeClasses)
			+e.top-box
				+e.t-row.row
					+e.tr-col-12
						if delivered
							+e.t-title Статус доставки: Доставлен
							+e.t-dates
								+tDateItem('02.03.2020', 'Собираем')
								+tDateItem('03.03.2020', 'Отправляем')
								+tDateItem('03.03.2020', 'В пути')
								+tDateItem('05.03.2020', 'Ждёт в магазине')
								+tDateItem('06.03.2020', 'Доставлен')
						else 
							+e.t-title--notDelivered Статус доставки: -
					+e.tl-col-12
						+e.t-title Информация о заказе
						+e.t-info
							if delivered
								+tInfoItem('Статус заказа', 'На доставке')
							else
								+tInfoItem('Статус заказа', 'Не оплачен').text-danger
							+tInfoItem('Способ доставки', 'Почтой России')
							+tInfoItem('Стоимость доставки', '500 ₽')
							+tInfoItem('Адрес доставки', '1117463, Москва, Паустовского, 4')
					+e.tl-col-12
						+e.t-title Контактая информация
						+e.t-info
							+tInfoItem('ФИО получателя', 'Неретин<br>Николай Игоревич')
							+tInfoItem('Телефон', '+7 (916) 176-05-12')
							+tInfoItem('Почта', 'nicolomelodini@gmail.com')
				+e.goods
					+e.g-title
						h4 Состав заказа
					+e.g-items
						+goodsItem('100 шт.')
						+goodsItem('100 шт.')
			+e.foot
				+e.f-data.ms-auto
					+fDataItem('Товары', '3 шт.')
					+fDataItem('Вес', '37 кг')
					+fDataItem('Скидка', '-11 890 ₽', 'text-danger')
					+fDataItem('Скидка по промокоду', '-11 890 ₽', 'text-danger pb-12')
					+fDataItem('ИТОГО', '24 600 ₽', 'huge-row')

