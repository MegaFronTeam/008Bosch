mixin page-head(title, logout, icon, descr, ...items)
	+b.page-head&attributes(attributes)
		.container
			+breadcrumb(...items)
		if title
			+e.title-wrap
				+e.container.container
					+e.title
						if icon
							+icon(`${icon}`)
						h1!= title
						if descr
							+e.descr!= descr
					if logout 
						+e.log-out(href='#')
							+icon('exit')
