mixin arrow(className)
	if className
		.swiper-prev(class=className)
			+icon('swiper-left')
		.swiper-next(class=className)
			+icon('swiper-right')
	else
		.swiper-prev
			+icon('swiper-left')
		.swiper-next
			+icon('swiper-right')
//- /arrow for swiper-slider

