mixin prodTabsTableRow(name, val)
	+e.t-row.row
		+e.t-name-col.col-6=name
		+e.t-val-col.col-6=val

mixin productTabsSlide(title, addClass="")
	.swiper-slide
		+e.btn.tabs__btn(class=addClass)=title

mixin miniSlider()
	+b.mini-slider
		.swiper.mini-slider-js
			.swiper-wrapper
				+miniSlide()
				+miniSlide()
				+miniSlide()
				+miniSlide()
				+miniSlide()
		.swiper-pagination

mixin miniSlide()
	.swiper-slide
		+e.img(href='#')
			img.swiper-lazy(src="#" data-src="img/@2x/mini-slide.jpg" alt="")

mixin tableDescr(title)
	+e.table-descr&attributes(attributes)
		+e.t-head=title
		+e.t-items
			block

mixin tableDescrItem(name, val)
	+e.t-item.row
		+e.t-name-col.col-6=name
		if block
			+e.t-val-col.col-6
				block
		else
			+e.t-val-col.col-6=val

mixin buyBlock()
	+b.buy-bl--js
		+e.close-bar.d-md-none.buy-bl-toggle-js
			+icon('chevron-down')
		+e.main-row.row
			+e.price-col.col.col-md-6.col-lg-12
				+e.price-row.row
					.col.col-lg-12.col-xl.d-flex.flex-column
						+e.price--new 16 500 ₽
						+e.price--old 18 500 ₽
					+e.inputs-col.col.col-lg-12.col-xl
						+e.price
							+e.p-btn--min 
							+e.INPUT.p-input.form-control(type='number' value="1")
							+e.p-btn--plus
			+e.btns-col.col-auto.col-md-6.col-lg-12
				+e.btn-row.row
					.col-md-6.col-lg-12
						+e.buy-btn(href="#") В корзину
					+e.bill-col.col-md-6.col-lg-12
						+e.bill-btn(href="#") Запросить счёт
					+e.bill-col.col-md-6.col-lg-12.d-none.d-lg-block
						+e.bill-btn(href="#") Уведомить о поступлении
			+e.open-col.col-auto.d-md-none.buy-bl-toggle-js
				+e.open
					span


mixin prodCardSliders(addClasses='')
	+b.pc-sliders--js(class=addClasses)
		+e.row.row
			+e.slider-col.col-md-12
				+e.slider
					.swiper.sProdCard-slider-js
						.swiper-wrapper
							+prodCardSlide(1)
							+prodCardSlide(1)
							+prodCardSlide(1)
							+prodCardSlide(1)
					+arrow('d-none d-sm-flex')
			.col-12
				+e.thumb-slider
					.swiper.sProdCard-thumb-js
						.swiper-wrapper
							+prodCardThumb(1)
							+prodCardThumb(2)
							+prodCardThumb(3)
							+prodCardThumb(4)
							+prodCardThumb(5)

mixin prodCardThumb(imgNum)
	.swiper-slide
		+e.th-item
			img.swiper-lazy(src="#" data-src=`img/@2x/thumb-${imgNum}.jpg` alt="")

mixin prodCardSlide(imgNum)
	.swiper-slide
		+e.slide-img(href=`img/@2x/prod-gallery-1.jpg` data-fancybox=`prod-gallery`)
			.img-wrap-center
				img.swiper-lazy(src="#" data-src=`img/@2x/prod-card-img.png` alt="")

