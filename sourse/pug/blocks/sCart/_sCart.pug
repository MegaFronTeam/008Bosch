mixin sCart(data)
	// start sCart
	+b.sCart.section#sCart&attributes(attributes)
		+e.container.container
			//- block
			//- +b.section-title.light.long
			//- 	h2 Корзина
			+e.main-row.row
				.col-lg-8
					+cartItem()
					+cartItem()
					+cartItem()
				.col-lg-4
					+e.box
						+e.order-txt.h2 Ваш заказ
						+e.o-rows
							+orderRow('Товары', '3')
							+orderRow('Вес', '30 кг')
							+orderRow('Скидка', '-11 890 ₽', 'text-primary')
						+e.o-row--result.row
							+e.result.col ИТОГО
							+e.result.col-auto 33 294  ₽
						+e.promo
							+input('Промокод', 'text', false, 'promo')
							+e.p-btn(type='button')
								+icon('enter')
						+e.btns-box
							+e.bb-btn--green(href="#") Купить
							+e.bb-btn--white(href='#') Запросить счёт
						+e.sm.text-center Доступные способы и время доставки можно выбрать при оформлении заказа
	// end sCart
mixin orderRow(name,val,addClasses='')
	+e.o-row.row
		.col(class=addClasses)=name
		.col-auto(class=addClasses)=val

