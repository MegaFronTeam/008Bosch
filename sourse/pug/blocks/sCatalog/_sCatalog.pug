mixin item-prod(i, slider, code='VB3616DA', t="MULTI VOLT (36V) Cordless Portable Rebar Cutter/Bender", hasOldPrice=true, toCompare, toBookmark)
	+b.prod-item&attributes(attributes)
		+e.links
			if toCompare
				+e.compare.--active(href="#")
					+icon('bars')
			else
				+e.compare(href="#")
					+icon('bars')
			if toBookmark
				+e.bookmarks.--active(href="#")
					+icon('star')
			else
				+e.bookmarks(href="#")
					+icon('star')
		block
		+e.A.img-link(href="#")
			+e.img-wrap
				if !slider
					img(loading="lazy" src=`img/@2x/hit-${i}.png`, alt="")
				else
					img.swiper-lazy(src="#" data-src=`img/@2x/hit-${i}.png`, alt="")
			+e.code=code
			+e.title= t
		+e.box
			if hasOldPrice
				+e.price-wrap
					+e.price--new 24 600 ₽
					+e.price--old 28 400 ₽
			else
				+e.price--new 22 600 ₽
			+e.discount 10%
		+e.btn(href="#") Купить

