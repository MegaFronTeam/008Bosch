mixin modal()
	//  start modals
	.d-none
		+b.modal-win(id="modal-city")
			+e.title.justify-content-center Ваш город Москва?
			.row.justify-content-center
				.col-auto
					+e.btn(type="button") Да
				.col-auto
					+e.btn-outline(type="button") Нет
		// #modal-city
		+b.modal-win.text-center(id="modal-prod-add")
			+e.title.justify-content-center Товар добавлен в корзину
			.row.justify-content-center
				.col-auto
					+e.btn(type="button") Оформить
				.col-auto
					+e.btn-outline(type="button") Продолжить
		//#modal-prod-add
		+b.modal-win.--goods.text-center(id="modal-prod-added")
			+e.title Товар добавлен в корзину
			.row
				.col-12.col-sm-6
					+e.btn-outline.btn-resume(type="button") Продолжить покупки
				.col-12.col-sm-6
					+e.btn(type="button") Перейти в корзину
			mixin addedItem(img="1",title="Шуруповерт с 6 положениями регулировки",number="FS2700", sale, oldPrice="18 500 ₽",newPrice="16 500 ₽")
				+b.added-item
					+e.img-wrap
						+img(`img/@2x/added-item-${img}.jpg`)
					+e.name
						+e.title(href="#")!= title
						+e.number= number
					+e.price
						if sale 
							+e.old-price= oldPrice
							+e.new-price= newPrice
						else
							+e.new-price= newPrice
					+btn('В корзину').btn.btn-primary
			+addedItem()
			+addedItem('1','Шуруповерт с 6 положениями регулировки','FS2700','sale','18 500 ₽','16 500 ₽')
			+addedItem()
			+addedItem()
			+addedItem()
			+addedItem()
		//#modal-prod-added
		+b.modal-win(id="modal-call")
			+form-wrap()
				.modal-win__title.mb-24 Заказ звонка
				+e.inputs
					+input("","text",'ФИО*')(required class="invalid")
					+input("","tel",'Телефон*')(required class="valid")
				.modal-bottom.row
					.col-auto
						+e.polite Нажимая кнопку "Отправить", вы соглашаетесь с 
							a(href="#") Политикой конфиденциальности.
					.col
						input.btn.btn-primary(type="submit" value="Отправить")
		// #modal-call
		+b.modal-win(id="modal-inner")
			+form-wrap()
				.modal-win__title.mb-24 
					| Авторизация
					a.link-modal(href="#modal-reg") Регистрация
				+input("","email",'E-mail')(required)
				+input("","password",'Пароль*')(required).is-invalid
				+e.forgot.d-block.mb-24(href="#") Забыли пароль?
				.modal-bottom.row
					.col-auto
						+e.polite Нажимая кнопку "Войти", вы соглашаетесь с 
							a(href="#") Политикой конфиденциальности.
					.col
						input.btn.btn-primary(type="submit" value="Войти")
					//- .row
					//- 	.col-6
					//- 		button.modal-win__btn(type="button") Войти
					//- 	.col-6
					//- 		button.modal-win__btn-outline(type="button") Регистрация
		// #modal-inner
		+b.modal-win(id="modal-reg")
			+form-wrap()
				.modal-win__title.mb-24 
					| Регистрация
					a.link-modal(href="#modal-inner") Авторизация
				+e.inputs
					+input("","email",'Эл. почта*')(required)
					+input("","password",'Пароль*')(required)
					+input("","password",'Повторить пароль*')(required class="border-danger text-danger is-invalid")
					+e.forgot.--red.d-block.mb-24  Пароли не совпадают
				.modal-bottom.row
					.col
						+e.polite Нажимая кнопку "Зарегистрироваться", вы соглашаетесь с 
							a(href="#") Политикой конфиденциальности.
					.col-auto
						input.btn.btn-primary(type="submit" value="Зарегистрироваться")
		// #modal-reg
		+b.modal-win(id="modal-order-request").--large
			+form-wrap()
				.modal-win__title.text-center.mb-24 Запрос счёта
				+e.input-title.file-headline Контактные данные
				+e.inputs.mb-60
					+input('', 'text', 'ФИО*', 'user-name')(required)
					+input('', 'tel', 'Телефон*', 'phone')(required)
					+input('', 'email', 'Email*')(required)
				.tabs
					.tabs__caption.row
						.col-6.ps-0
							.tabs__btn.active Заполнить реквизиты
						.col-6
							.tabs__btn Загрузить реквизиты
					.tabs__wrap
						.tabs__content.active
							+e.input-title.file-headline Реквизиты
							+e.inputs
								+input('', 'text', 'Корр. счёт', 'account-1')
								+input('', 'text', 'Расч. счёт', 'account-2')
								+input('', 'email', 'E-mail*')(required)
						.tabs__content.pb-24
							+e.input-title.file-headline Прикрепить файл
							#props-dz.dropzone()
								.fallback
									input(name='file', type='file', multiple='')
				.modal-bottom.row
					.col-auto
						+e.polite.col Нажимая кнопку "Отправить", вы соглашаетесь с 
							a(href="#") Политикой конфиденциальности.
					.col
						input.btn.btn-primary(type="submit" value="Отправить")
// end modals